@model GraniteHouse.Models.ViewModels.ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
}

<form method="post">
    <br/>
    <br/>
    <h2 class="text-info">Your Shopping Cart</h2>
    <br/>
    
    @if (@Model.Products.Count > 0)
    {
        <div class="container border border-secondary rounded" style="padding: 15px">
            <div class="row">
                <div class="col-8" style="border-right: 1px solid #bbb9b9;">
                    <table class="table table-striped" width="100%">
                        <tr class="table-info">
                            <td style="text-align: center; width: 20%"></td>
                            <td style="text-align: center;">
                                <label asp-for="@Model.Products.FirstOrDefault().Name"></label>
                            </td>
                            <td style="text-align: center;">
                                <label asp-for="@Model.Products.FirstOrDefault().Price"></label>
                            </td>
                            <td style="text-align: center;">
                                <label asp-for="@Model.Products.FirstOrDefault().ShadeColor"></label>
                            </td>
                            <td style="text-align: center;">
                                <label asp-for="@Model.Products.FirstOrDefault().ProductType.Name"></label>
                            </td>
                            <td style="text-align: center;"></td>
                        </tr>
                        @foreach (var item in Model.Products)
                        {
                            <tr style="padding: 50px">
                                <td>
                                    <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                                        <img src="@item.Image" width="100%" style="margin: auto; display: block; border-radius: 5px; border: 1px solid #bbb9b9" />
                                    </a>
                                </td>
                                <td style="text-align: center">
                                    @Html.DisplayFor(p => item.Name)
                                </td>
                                <td style="text-align: center">
                                    @Html.DisplayFor(p => item.Price)
                                </td>
                                <td style="text-align: center">
                                    @Html.DisplayFor(p => item.ShadeColor)
                                </td>
                                <td style="text-align: center">
                                    @Html.DisplayFor(p => item.ProductType.Name)
                                </td>
                                <td style="text-align: center">
                                    <button type="submit" class="btn btn-danger" asp-action="Remove" asp-controller="Home" asp-area="Customer" asp-route-id="@item.Id">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>

                        }
                    </table>
                </div>
                <div class="col-4" style="padding-left: 30px">
                    <div class="row">
                        <div class="col-12">
                            <label>Name: </label>
                        </div>
                        <div class="col-12" style="padding-bottom: 15px">
                            <input asp-for="@Model.Appointment.CustomerName" class="form-control" />
                        </div>
                        <div class="col-12" >
                            <label>Phone Number: </label>
                        </div>
                        <div class="col-12" style="padding-bottom: 15px">
                            <input asp-for="@Model.Appointment.CustomerPhoneNumber" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label>Email: </label>
                        </div>
                        <div class="col-12" style="padding-bottom: 15px">
                            <input asp-for="@Model.Appointment.CustomerEmail"  type="email" class="form-control" />
                        </div>
                        <div class="col-12" >
                            <label>Appointment Date: </label>
                        </div>
                        <div class="col-12" style="padding-bottom: 15px">
                            <input asp-for="@Model.Appointment.AppointmentDate" value="" type="text" id="datepicker" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label>Appointment Time: </label>
                        </div>
                        <div class="col-12" style="padding-bottom: 15px">
                            <input asp-for="@Model.Appointment.AppointmentTime" value="" type="text" class="timepicker form-control" />
                        </div>
                        <div class="col-12">
                            <button type="submit" id="btnPlaceHolder" class="btn btn-success">Schedule Appointment</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>The cart is empty! Browse products and add.</p>
    }

</form>

@section Scripts{
    <script>
        $('.timepicker').timepicker({
            timeFormat: 'h:mm p',
            interval: 30,
            minTime: '10',
            maxTime: '3:00pm',
            defaultTime: '11',
            startTime: '10:00',
            dynamic: true,
            dropdown: true,
            scrollbar: true
        });
        $(function() {
            $("#datepicker").datepicker({
                minDate: +1,
                maxDate: "+3M"
            });

           
        });
    </script>
}