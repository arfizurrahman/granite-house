@model List<GraniteHouse.Models.Product>


@if (Model.Count > 0)
{
    <table class="table table-striped" width="100%">
        <tr class="table-info">
            <td style="text-align: center; width: 20%"></td>
            <td style="text-align: center;">
                <label asp-for="@Model.FirstOrDefault().Name"></label>
            </td>
            <td style="text-align: center;">
                <label asp-for="@Model.FirstOrDefault().Price"></label>
            </td>
            <td style="text-align: center;">
                <label asp-for="@Model.FirstOrDefault().ShadeColor"></label>
            </td>
            <td style="text-align: center;">
                <label asp-for="@Model.FirstOrDefault().ProductType.Name"></label>
            </td>
            
        </tr>
        @foreach (var item in Model)
        {
            <tr style="padding: 50px">
                <td>
                    <img src="@item.Image" width="100%" style="margin: auto; display: block; border-radius: 5px; border: 1px solid #bbb9b9" />
                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(p => item.Name)
                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(p => item.Price)
                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(p => item.ShadeColor)
                </td>
                <td style="text-align: center">
                    @Html.DisplayFor(p => item.ProductType.Name)
                </td>
                
            </tr>

        }
    </table>
}
else
{
    <div>No items added to the shopping cart...</div>
}